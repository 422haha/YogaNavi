<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SingleLineText">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="BoldLargeText">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BoldSmallText">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BoldMediumText">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BoldSemiMediumText">
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="commonText">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="LargeText">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="BottomNavigationViewNoRipple" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:itemBackground">@android:color/transparent</item>
        <item name="android:colorControlHighlight">@android:color/transparent</item>
    </style>

    <style name="WeeklyButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@drawable/round_button_background</item>
        <item name="android:gravity">center</item>
        <item name="layout_constraintDimensionRatio">1:1</item>
        <item name="layout_constraintWidth_percent">0.12</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:button">@null</item>
    </style>

    <style name="RegisterButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">20dp</item>
        <item name="android:button">@null</item>
        <item name="android:background">@color/bottomnav</item>
    </style>

    <style name="CustomSearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@drawable/no_underline</item>
    </style>

    <style name="boxCornerRadiusStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/ti_height</item>
        <item name="android:layout_marginStart">@dimen/padding_extra_extra_large</item>
        <item name="android:layout_marginEnd">@dimen/padding_extra_extra_large</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/padding_extra_large</item>
        <item name="boxCornerRadiusBottomStart">@dimen/padding_extra_large</item>
        <item name="boxCornerRadiusTopEnd">@dimen/padding_extra_large</item>
        <item name="boxCornerRadiusTopStart">@dimen/padding_extra_large</item>
    </style>

    <style name="profile">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/padding_small</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:paddingStart">@dimen/padding_large</item>
        <item name="android:paddingTop">@dimen/padding_medium</item>
        <item name="android:paddingBottom">@dimen/padding_medium</item>
    </style>

    <!-- Custom TimePicker theme -->
    <style name="CustomMaterialTimePickerTheme" parent="ThemeOverlay.MaterialComponents.TimePicker">
        <item name="materialTimePickerTitleStyle">@style/CustomTimePickerTextAppearance</item>
    </style>

    <!-- Custom TimePicker text appearance -->
    <style name="CustomTimePickerTextAppearance" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 캘린더 DatePicker 색상 변경 -->
    <style name="MySpinnerDatePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/primary</item>
        <item name="android:windowBackground">@drawable/rounded_dialog_background</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/DialogButtonStyled</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/DialogButtonStyled</item>
    </style>

    <style name="DialogButtonStyled" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="GoButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/primary</item>
    </style>
</resources>